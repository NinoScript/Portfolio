//- Default values
-var Title       = 'TÃ­tulo por defecto'
-var ProyectName = filename.replace(/.*\/(.*)\.[^.]+$/, "$1") //.split('.')[0]
-var UsesD3      = true
-var UsesJQuery  = false
-var JavaScripts = []
-var StyleSheets = []
//- Overrides
block Variables

!!!5
html
	head
		meta(charset='utf-8')
		meta(name='viewport', content='width=device-width, initial-scale=1.0')

		title= Title
		link(rel='stylesheet', href='../css/#{ProyectName}.css')
		
		- StyleSheets.forEach(function(css){
			link(rel='stylesheet', href='../css/#{css}.css')
		- })
	body
		block Content
		- if (UsesD3)
			script(type='text/javascript', src='../js/d3/d3.js')
		- if (UsesJQuery)
			script(type='text/javascript', src='../js/jquery/jquery.js')
		- JavaScripts.forEach(function(js){
			script(type='text/javascript', src='../js/#{js}.js')
		- })
		script(type='text/javascript', src='../js/#{ProyectName}.js')
		
